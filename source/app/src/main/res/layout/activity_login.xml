<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <com.rey.material.widget.Button
        style="@style/Material.Drawable.Ripple.Touch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BUTTON"
        app:rd_enable="true"
        android:layout_marginTop="106dp"
        android:layout_below="@+id/button_bt_float_wave"
        android:layout_alignParentStart="true" />

    <com.rey.material.widget.FloatingActionButton
        style="@style/Material.Widget.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_backgroundColor="@color/background_floating_material_dark"
        android:id="@+id/button_bt_float_wave"
        />

    <com.rey.material.widget.FloatingActionButton
        style="@style/Material.Widget.FloatingActionButton"
        android:id="@+id/fab_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <com.rey.material.widget.FloatingActionButton
        style="@style/Material.Widget.FloatingActionButton"
        android:id="@+id/fab_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_iconSrc="@drawable/ic_done_white_24dp"

        />



</LinearLayout>
